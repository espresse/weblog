
  <%= form_for ["admin", @post], :html => { :multipart => true } do |f| %>
    
    <% if @post.errors.any? %>

      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    <% end %>
    


    <div class="group">
      <%= f.label :title, :class => "label" %>
      <%= f.text_field :title, :class => "text_field" %>
    </div>
    
    <div class="group">
      <%= f.label :content, :class => "label" %>
      <%= f.text_area :content, :class => "text_area" %>
    </div>

     <div class="group">
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list, :class => "text_field" %>
    </div>

    
    
    
    <div class="group navform wat-cf">
      <button type="submit" name="commit" class="button">
        <%= image_tag("icons/tick.png") %>
        Submit
      </button>
    </div>
  <% end %>
