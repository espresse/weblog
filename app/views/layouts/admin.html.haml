!!!
%html
  %head
    %title Weblog - Admin section
    = stylesheet_link_tag "web-app-theme/base"
    = stylesheet_link_tag "web-app-theme/themes/activo/style"
    = stylesheet_link_tag "web-app-theme/override"
    = javascript_include_tag "admin/admin", debug: Rails.env.development?
    = csrf_meta_tag
  %body
    #container
      #header
        %h1
          %a{href: "/"} Weblog - Admin
        #user-navigation
          %ul.wat-cf
            %li
              %span.box{title: "User"}= link_to current_user.username, admin_posts_path
            %li
              = link_to t("web-app-theme.logout", default: "Logout"), log_out_path, class: "logout"
        #main-navigation
          %ul.wat-cf
            %li= link_to "Posts", admin_posts_path
      #wrapper.wat-cf
        .flash
          - flash.each do |type, message|
            %div{class: "message #{type}"}
              %p= message
        #main
          = yield
          #footer
            .block
              %p
                Copyright &copy; 2011 - #{Time.now.year} Web App.
        #sidebar
          = yield :sidebar
