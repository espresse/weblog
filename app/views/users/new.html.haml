%h1 Sign Up
= form_for @user, :html => { :class => "box" } do |f|
  - if @user.errors.any?
    .error_messages
      %h2 Form is invalid
      %ul
        - for message in @user.errors.full_messages
          %li= message
  %fieldset.boxBody
    = f.label :email
    %br/
    = f.text_field :email
    = f.label :username
    %br/
    = f.text_field :username
    = f.label :password
    %br/
    = f.password_field :password
    = f.label :password_confirmation
    %br/
    = f.password_field :password_confirmation
  %footer
    = f.submit "Submit", :class => "btnSubmit"
